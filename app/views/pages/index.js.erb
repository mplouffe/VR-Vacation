$('#packages').html("<%= escape_javascript render(:partial => 'pages/package', :collection => @packages) %>");
$('#paginator').html('<%= escape_javascript(paginate(@packages, remote: true).to_s) %>');

$(document).ready(function () {
	$('#')
    $('#search-submit').click(function(e){
    	if(!$('#search-input').val()){
    		e.preventDefault();
    		return;
    	}
    	let link = "/?page=1&search=" + $('#search-input').val();
    	console.log(link);
    	$('#search-submit').attr("href", link);
    });
});